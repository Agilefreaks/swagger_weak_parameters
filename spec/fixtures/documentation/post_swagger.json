{
  "swagger": "2.0",
  "info": {
    "version": "1.0",
    "title": "The test api",
    "description": "Test api description"
  },
  "host": "localhost:1234",
  "basePath": "/",
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/tests": {
      "post": {
        "summary": "Create test",
        "operationId": "createPostTests",
        "tags": [
          "Post tests"
        ],
        "parameters": [
          {
            "name": "short_name",
            "in": "path",
            "required": true,
            "description": "Short test name",
            "type": "string"
          },
          {
            "name": "count",
            "in": "path",
            "required": true,
            "description": "Count of tests",
            "type": "integer",
            "format": "int32"
          },
          {
            "name": "token",
            "type": "string",
            "in": "query",
            "description": "The token"
          },
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "required": [
                "boolean_required",
                "string_required",
                "integer_required"
              ],
              "properties": {
                "subject": {
                  "description": "The unit under test",
                  "type": "string"
                },
                "context": {
                  "description": "The context of the test",
                  "type": "string"
                },
                "runs": {
                  "description": "Run times",
                  "type": "integer",
                  "format": "int32"
                },
                "passed": {
                  "description": "Passed",
                  "type": "boolean"
                },
                "boolean_required": {
                  "description": "Boolean required",
                  "type": "boolean"
                },
                "string_required": {
                  "description": "String required",
                  "type": "string"
                },
                "integer_required": {
                  "description": "Integer required",
                  "type": "integer",
                  "format": "int32"
                },
                "string_enum": {
                  "description": "String enum",
                  "enum": [
                    "a",
                    "b",
                    "c"
                  ],
                  "type": "string"
                },
                "string_default": {
                  "description": "String default",
                  "default": "origin",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Created the test"
          },
          "400": {
            "description": "Bad Request"
          }
        }
      }
    },
    "/tests/custom_action": {
      "post": {
        "summary": "Creates a custom action",
        "operationId": "customActionPostTests",
        "tags": [
          "Post tests"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "properties": {
                "action": {
                  "description": "Some action",
                  "type": "string"
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": ""
          }
        }
      }
    }
  }
}